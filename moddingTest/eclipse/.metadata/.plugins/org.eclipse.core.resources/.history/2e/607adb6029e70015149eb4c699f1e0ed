package com.test.item;

import com.test.main.TestCore;
import com.test.multiblock.BlockFrameTileEntity;
import com.test.multiblock.BlockPipeTileEntity;
import com.test.multiblock.construct.tileentity.ConstructInterfaceTileEntity;
import com.test.multiblock.construct.tileentity.ConstructInventoryBaseTileEntity;

import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;
import net.minecraft.world.World;

public class ItemWrench extends Item {

	public ItemWrench() {
		this.setTextureName("stick");
		setUnlocalizedName("testItem");
		setCreativeTab(TestCore.testCreativeTab);
	}

	@Override
	public boolean onItemUse(ItemStack itemStack, EntityPlayer player, World world, int x, int y, int z, int side,
			float hitX, float hitY, float hitZ) {
		if (world.getTileEntity(x, y, z) instanceof ConstructInventoryBaseTileEntity) {
			ConstructInventoryBaseTileEntity tile = (ConstructInventoryBaseTileEntity) world.getTileEntity(x, y, z);
			tile.onRightClickedByWrench(player, side, hitX, hitY, hitZ);
			return true;
		}else if(world.getTileEntity(x, y, z) instanceof ConstructInterfaceTileEntity){
			ConstructInterfaceTileEntity tile = (ConstructInterfaceTileEntity) world.getTileEntity(x, y, z);
			tile.onRightClickedByWrench(player, side, hitX, hitY, hitZ);
			return true;
		} else if (world.getTileEntity(x, y, z) instanceof BlockPipeTileEntity) {
			BlockPipeTileEntity pipe = (BlockPipeTileEntity) world.getTileEntity(x, y, z);
			// setudann
			return true;
		} else if (world.getTileEntity(x, y, z) instanceof BlockFrameTileEntity) {
			BlockFrameTileEntity frame = (BlockFrameTileEntity) world.getTileEntity(x, y, z);
			frame.tryConstruct();
			return true;
		}
		return true;
	}

}
