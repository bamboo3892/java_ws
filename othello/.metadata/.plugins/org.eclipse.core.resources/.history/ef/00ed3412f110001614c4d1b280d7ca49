package main;

import javax.swing.JFrame;
import javax.swing.JScrollPane;
import javax.swing.JTextArea;
import javax.swing.border.EmptyBorder;

public class AIChooseGui extends JFrame {

	private static final long serialVersionUID = 7298487213402425577L;

	private IAIChooser chooser;
	private int ID;
	private JScrollPane contentPane;
	private JTextArea mainPane;

	public AIChooseGui(IAIChooser chooser, int ID) {
		this.chooser = chooser;
		this.ID = ID;

		setResizable(false);
		setDefaultCloseOperation(JFrame.DO_NOTHING_ON_CLOSE);
		contentPane = new JScrollPane();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);

		mainPane = new JTextArea();
		contentPane.setViewportView(mainPane);



		pack();
		setVisible(true);
	}

	public interface IAIChooser {

		void setAIName(int ID);

	}

}
