package ai;

import main.Sheet;

public abstract class AISheet extends Sheet {

	protected int nextX;
	protected int nextY;
	protected int originalTeban;

	public AISheet() {
		super();
	}

	@Deprecated
	public AISheet(int[][] box, int teban) {
		super(box, teban);
	}

	public AISheet set(int[][] box, int teban) {
		for (int i = 0; i < 8; i++)
			for (int j = 0; j < 8; j++){
				this.box[i][j] = box[i][j];
			}
		this.teban = teban;
		this.originalTeban = teban;
		return this;
	}

	public abstract void decideNextPlace();

	public final int getNextX() {
		return nextX;
	}

	public final int getNextY() {
		return nextY;
	}

	@Override
	public final void finalize() {
		try{
			super.finalize();
		}catch (Throwable e){
			e.printStackTrace();
		}
		System.gc();
	}

}
