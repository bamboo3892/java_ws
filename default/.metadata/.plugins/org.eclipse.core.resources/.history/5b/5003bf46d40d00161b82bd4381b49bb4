package main;

import java.io.IOException;

import javax.swing.JFrame;
import javax.swing.SwingUtilities;

public class Start {

	private static JFrame jf;
	public static GuiPanel panel;
	public static final int panelSize = 604;
	public static boolean player[] = new boolean[3];//player:true
	public static AISheet[] ais = new AISheet[3];

	public static void main(String[] args) throws IOException {

		SwingUtilities.invokeLater(new Runnable() {
			public void run() {
				try{
					InitGui frame = new InitGui();
					frame.setVisible(true);
				}catch (Exception e){
					e.printStackTrace();
				}
			}
		});

		player[1] = true;
		player[2] = false;
		jf = new JFrame("Othello");
		jf.setBounds(300, 300, panelSize + 6, panelSize + 35);
		jf.setDefaultCloseOperation(3);
		jf.setResizable(false);
		panel = new GuiPanel();
		jf.add(panel);
		jf.setVisible(true);
	}

}
