package main;

import java.awt.BorderLayout;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.IOException;

import javax.swing.ButtonGroup;
import javax.swing.JButton;
import javax.swing.JCheckBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JRadioButton;
import javax.swing.SwingUtilities;
import javax.swing.border.EmptyBorder;

import ai.RandomAISheet;

public class InitGui extends JFrame implements ActionListener {

	public static void main(String[] args) {
		SwingUtilities.invokeLater(new Runnable() {
			public void run() {
				try{
					InitGui frame = new InitGui();
					frame.setVisible(true);
				}catch (Exception e){
					e.printStackTrace();
				}
			}
		});
	}

	private JPanel contentPane;
	private JCheckBox useAI1;
	private ButtonGroup group1;

	private JCheckBox useAI2;
	private ButtonGroup group2;

	public InitGui() {
		setResizable(false);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 253, 350);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		contentPane.setLayout(new BorderLayout(0, 0));
		setContentPane(contentPane);

		JButton btnStart = new JButton("start");
		btnStart.addActionListener(this);
		contentPane.add(btnStart, BorderLayout.SOUTH);

		JPanel panel = new JPanel();
		contentPane.add(panel, BorderLayout.CENTER);
		panel.setLayout(new GridLayout(0, 1, 0, 0));

		/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

		JPanel panel_1 = new JPanel();
		panel.add(panel_1);
		panel_1.setLayout(new GridLayout(0, 1, 0, 0));

		JLabel label = new JLabel("先手------------------------------");
		panel_1.add(label);

		useAI1 = new JCheckBox("AIを使う");
		panel_1.add(useAI1);

		ButtonGroup group1 = new ButtonGroup();

		JRadioButton rbutton1_0 = new JRadioButton("AI1");
		panel_1.add(rbutton1_0);
		JRadioButton rbutton1_1 = new JRadioButton("AI2");
		panel_1.add(rbutton1_1);
		JRadioButton rbutton1_2 = new JRadioButton("AI3");
		panel_1.add(rbutton1_2);
		JRadioButton rbutton1_3 = new JRadioButton("AI4");
		panel_1.add(rbutton1_3);
		JRadioButton rbutton1_4 = new JRadioButton("AI5");
		panel_1.add(rbutton1_4);

		group1.add(rbutton1_0);
		group1.add(rbutton1_1);
		group1.add(rbutton1_2);
		group1.add(rbutton1_3);
		group1.add(rbutton1_4);

		/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

		JPanel panel_2 = new JPanel();
		panel.add(panel_2);
		panel_2.setLayout(new GridLayout(0, 1, 0, 0));

		JLabel label_1 = new JLabel("後手------------------------------");
		panel_2.add(label_1);

		useAI2 = new JCheckBox("AIを使う");
		panel_2.add(useAI2);

		group2 = new ButtonGroup();

		JRadioButton rbutton2_0 = new JRadioButton("AI1");
		panel_2.add(rbutton2_0);
		JRadioButton rbutton2_1 = new JRadioButton("AI2");
		panel_2.add(rbutton2_1);
		JRadioButton rbutton2_2 = new JRadioButton("AI3");
		panel_2.add(rbutton2_2);
		JRadioButton rbutton2_3 = new JRadioButton("AI4");
		panel_2.add(rbutton2_3);
		JRadioButton rbutton2_4 = new JRadioButton("AI5");
		panel_2.add(rbutton2_4);

		group2.add(rbutton2_0);
		group2.add(rbutton2_1);
		group2.add(rbutton2_2);
		group2.add(rbutton2_3);
		group2.add(rbutton2_4);

	}

	@Override
	public void actionPerformed(ActionEvent event) {

		contentPane.setEnabled(false);

		Class<? extends AISheet> ai1 = null;
		Class<? extends AISheet> ai2 = null;

		if(useAI1.isSelected()){
			String name = group1.getSelection().getActionCommand();
			if(name.equals("aaa")){
				ai1 = RandomAISheet.class;
			}else{
				ai1 = RandomAISheet.class;
			}
		}

		if(useAI2.isSelected()){
			String name = group2.getSelection().getActionCommand();
			if(name.equals("aaa")){
				ai2 = RandomAISheet.class;
			}else{
				ai2 = RandomAISheet.class;
			}
		}

		JFrame jf = new JFrame("Othello");
		jf.setBounds(300, 300, Start.panelSize + 6, Start.panelSize + 35);
		jf.setDefaultCloseOperation(3);
		jf.setResizable(false);
		GuiPanel panel = null;
		try{
			panel = new GuiPanel();
		}catch (IOException e){
			e.printStackTrace();
		}
		jf.add(panel);
		jf.setVisible(true);

	}

}
