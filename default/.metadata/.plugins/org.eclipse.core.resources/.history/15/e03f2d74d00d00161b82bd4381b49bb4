package main;

import java.awt.BorderLayout;
import java.awt.GridLayout;
import java.io.IOException;

import javax.swing.JButton;
import javax.swing.JCheckBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JRadioButton;
import javax.swing.border.EmptyBorder;

public class Start {

	private static JFrame jf;
	public static MyPanel panel;
	public static final int panelSize = 604;
	public static boolean player[] = new boolean[3];//player:true

	public static void main(String[] args) throws IOException {
		player[1] = true;
		player[2] = false;
		jf = new JFrame("Othello");
		jf.setBounds(300, 300, panelSize + 6, panelSize + 35);
		jf.setDefaultCloseOperation(3);
		jf.setResizable(false);
		panel = new MyPanel();
		jf.add(panel);
		jf.setVisible(true);
	}

	private class InitGui extends JFrame {

		private JPanel contentPane;

		private InitGui() {
			setResizable(false);
			setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
			setBounds(100, 100, 253, 350);
			contentPane = new JPanel();
			contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
			contentPane.setLayout(new BorderLayout(0, 0));
			setContentPane(contentPane);

			JButton btnStart = new JButton("start");
			contentPane.add(btnStart, BorderLayout.SOUTH);

			JPanel panel = new JPanel();
			contentPane.add(panel, BorderLayout.CENTER);
			panel.setLayout(new GridLayout(0, 1, 0, 0));

			JPanel panel_1 = new JPanel();
			panel.add(panel_1);
			panel_1.setLayout(new GridLayout(0, 1, 0, 0));

			JLabel label = new JLabel("先手------------------------------");
			panel_1.add(label);

			JCheckBox chckbxNewCheckBox = new JCheckBox("AIを使う");
			panel_1.add(chckbxNewCheckBox);

			JRadioButton rdbtnNewRadioButton_1 = new JRadioButton("AI1");
			panel_1.add(rdbtnNewRadioButton_1);

			JRadioButton rdbtnNewRadioButton_6 = new JRadioButton("New radio button");
			panel_1.add(rdbtnNewRadioButton_6);

			JRadioButton rdbtnNewRadioButton_7 = new JRadioButton("New radio button");
			panel_1.add(rdbtnNewRadioButton_7);

			JRadioButton rdbtnNewRadioButton_9 = new JRadioButton("New radio button");
			panel_1.add(rdbtnNewRadioButton_9);

			JRadioButton rdbtnNewRadioButton_8 = new JRadioButton("New radio button");
			panel_1.add(rdbtnNewRadioButton_8);

			JPanel panel_2 = new JPanel();
			panel.add(panel_2);
			panel_2.setLayout(new GridLayout(0, 1, 0, 0));

			JLabel label_1 = new JLabel("後手------------------------------");
			panel_2.add(label_1);

			JCheckBox chckbxAi = new JCheckBox("AIを使う");
			panel_2.add(chckbxAi);

			JRadioButton rdbtnNewRadioButton = new JRadioButton("AI1");
			panel_2.add(rdbtnNewRadioButton);

			JRadioButton rdbtnNewRadioButton_2 = new JRadioButton("New radio button");
			panel_2.add(rdbtnNewRadioButton_2);

			JRadioButton rdbtnNewRadioButton_3 = new JRadioButton("New radio button");
			panel_2.add(rdbtnNewRadioButton_3);

			JRadioButton rdbtnNewRadioButton_4 = new JRadioButton("New radio button");
			panel_2.add(rdbtnNewRadioButton_4);

			JRadioButton rdbtnNewRadioButton_5 = new JRadioButton("New radio button");
			panel_2.add(rdbtnNewRadioButton_5);

			this.pack();
		}
	}

}
